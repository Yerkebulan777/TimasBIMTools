<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RevitTimasBIMTools.Views"
    xmlns:viewmodels="clr-namespace:RevitTimasBIMTools.ViewModels" 
    d:DataContext="{d:DesignInstance Type=viewmodels:CutOpeningSettingsViewModel}"
    mc:Ignorable="d" Height="750" Width="450" WindowState="Normal" 
    x:Class="RevitTimasBIMTools.Views.CutOpeningSettingsView"
    WindowStartupLocation="CenterScreen" WindowStyle="None"
    ResizeMode="NoResize" Background="Gainsboro" 
    Topmost="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/RevitTimasBIMTools;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Height="750" Width="450" d:IsLocked="True"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Height="50" VerticalAlignment="Center" d:IsLocked="True" >
            <Label Content="Settings" Margin="15,10" FontSize="15" d:IsLocked="True"/>
        </StackPanel>
        <DockPanel Grid.Row="1" Height="150" VerticalAlignment="Center" Background="White" d:IsLocked="True" >
            <!--Visibility="{Binding AdvancedSettingsVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToViz}, FallbackValue=Hidden}"-->
            <GroupBox Header=" Element size " Margin="5" Padding="5" d:IsLocked="True">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" d:IsLocked="True">
                    <Border BorderBrush="LightGray" BorderThickness="0.5" Margin="2.5" d:IsLocked="True">
                        <Grid d:IsLocked="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Minimum side size" Grid.Column="0" Style="{StaticResource CenterHeaderTextBlock}" d:IsLocked="True"/>
                            <Slider x:Name="sliderMinSizeH" Grid.Column="1"  Minimum="5" Maximum="100" TickFrequency="5" Margin="10"
                                    Value="{Binding MinElementSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:IsLocked="True"/>
                            <TextBox Grid.Column="2" Height="25" Width="50" HorizontalContentAlignment="Center"
                                     Text="{Binding MinElementSize, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" d:IsLocked="True">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Border>
                    <Border BorderBrush="LightGray" BorderThickness="0.5" Margin="2.5" d:IsLocked="True">
                        <Grid d:IsLocked="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Maximum side size" Grid.Column="0" Style="{StaticResource CenterHeaderTextBlock}" d:IsLocked="True"/>
                            <Slider x:Name="sliderMaxSizeH" Grid.Column="1"  Minimum="100" Maximum="1500" TickFrequency="100" Margin="10"
                                    Value="{Binding MaxElementSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:IsLocked="True"/>
                            <TextBox Grid.Column="2" Height="25" Width="50" HorizontalContentAlignment="Center"
                                     Text="{Binding MaxElementSize, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" d:IsLocked="True">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Border>
                </StackPanel>
            </GroupBox>
        </DockPanel>
        <DockPanel Grid.Row="2" Height="150" VerticalAlignment="Center" Background="White" d:IsLocked="True">
            <!--Visibility="{Binding AdvancedSettingsVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToViz}, FallbackValue=Hidden}"-->
            <GroupBox Header=" Opening settings " Margin="5" Padding="5" d:IsLocked="True">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" d:IsLocked="True">
                    <Border BorderBrush="LightGray" BorderThickness="0.5" Margin="2.5" d:IsLocked="True">
                        <Grid d:IsLocked="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Cut offset" Grid.Column="0" Style="{StaticResource CenterHeaderTextBlock}" d:IsLocked="True"/>
                            <Slider x:Name="sliderCutOffset" Grid.Column="1"  Minimum="0" Maximum="100" TickFrequency="5" 
                                    Value="{Binding CutOffset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:IsLocked="True" />
                            <TextBox Grid.Column="2" Height="25" Width="50" HorizontalContentAlignment="Center"
                                     Text="{Binding CutOffset, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" d:IsLocked="True">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Border>
                    <Border BorderBrush="LightGray" BorderThickness="0.5" Margin="2.5" d:IsLocked="True">
                        <Grid d:IsLocked="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Size ratio limit" Grid.Column="0" Style="{StaticResource CenterHeaderTextBlock}" d:IsLocked="True"/>
                            <Slider x:Name="sliderRatio" Grid.Column="1"  Minimum="1" Maximum="5" TickFrequency="1" 
                                    Value="{Binding Ratio, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:IsLocked="True"/>
                            <TextBox Grid.Column="2" Height="25" Width="50" HorizontalContentAlignment="Center"
                                     Text="{Binding Ratio, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" d:IsLocked="True">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Border>
                </StackPanel>
            </GroupBox>
        </DockPanel>
        <StackPanel Grid.Row="3" Orientation="Vertical" Height="300" d:IsLocked="True">
            <DockPanel Height="150" VerticalAlignment="Center" Background="White" d:IsLocked="True">
                <Border BorderBrush="LightGray" BorderThickness="0.5" CornerRadius="3" Margin="15" d:IsLocked="True">
                    <Grid d:IsLocked="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text=" Сommunication сategory " Grid.Column="0" Style="{StaticResource CenterHeaderTextBlock}" d:IsLocked="True"/>
                        <ComboBox x:Name="ComboCats" Grid.Column="1" VerticalAlignment="Center" Margin="25,0" DisplayMemberPath="Name"
                                  ItemsSource="{Binding Path=RevitCategories, Mode=OneWay, UpdateSourceTrigger=Explicit}"
                                  SelectionChanged="ComboCats_SelectionChanged" d:IsLocked="True"/>
                    </Grid>
                </Border>
            </DockPanel>
            <DockPanel Height="150" VerticalAlignment="Center" Background="White" d:IsLocked="True">
                <GroupBox Header=" Select opening family " HorizontalAlignment="Center"  Margin="5" Padding="5" d:IsLocked="True">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" d:IsLocked="True">
                        <Border BorderBrush="LightGray" BorderThickness="0.5" Margin="5" d:IsLocked="True">
                            <Grid Margin="5" d:IsLocked="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Rectangular opening family" Grid.Column="0" Style="{StaticResource CenterHeaderTextBlock}" d:IsLocked="True"/>
                                <ComboBox x:Name="ComboRectangSymbol" Grid.Column="1" VerticalAlignment="Center" Margin="15,0" DisplayMemberPath="Name"
                                          ItemsSource="{Binding Path=RevitFamilySimbols, Mode=OneWay, UpdateSourceTrigger=Explicit}"
                                          SelectionChanged="ComboRectangSymbol_SelectionChanged" d:IsLocked="True"/>
                            </Grid>
                        </Border>
                        <Border BorderBrush="LightGray" BorderThickness="0.5" Margin="5" d:IsLocked="True" >
                            <Grid Margin="5" d:IsLocked="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Round opening family" Grid.Column="0" Style="{StaticResource CenterHeaderTextBlock}" d:IsLocked="True"/>
                                <ComboBox x:Name="ComboRoundSymbol" Grid.Column="1" VerticalAlignment="Center" Margin="15,0" DisplayMemberPath="Name"
                                          ItemsSource="{Binding Path=RevitFamilySimbols, Mode=OneWay, UpdateSourceTrigger=Explicit}"
                                          SelectionChanged="ComboRoundSymbol_SelectionChanged" d:IsLocked="True"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </GroupBox>
            </DockPanel>
        </StackPanel>
        <StackPanel x:Name="SettingCommands" Grid.Row="4" Height="100"  Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Right" Margin="15,0" d:IsLocked="True">
            <Button x:Name="DefaultSettingCmd" Content="Default" Height="25" Width="90" Margin="10" Click="DefaultSettingCmd_Click" d:IsLocked="True" />
            <Button x:Name="ApplySettingCmd" Content="Apply" Height="25" Width="90" Margin="10" Click="ApplySettingCmd_Click" d:IsLocked="True" />
        </StackPanel>
    </Grid>
</Window>
