<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="Page" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:viewmodels="clr-namespace:RevitTimasBIMTools.ViewModels" 
    xmlns:converter="clr-namespace:RevitTimasBIMTools.ViewConverters"
    d:DataContext="{d:DesignInstance Type=viewmodels:CutOpeningDataViewModel}"
    x:Class="RevitTimasBIMTools.Views.CutOpeningDockPanelView" 
    mc:Ignorable="d" Background="Silver">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/RevitTimasBIMTools;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Border BorderThickness="2.5" BorderBrush="Gray" d:IsLocked="True">
        <Grid x:Name="PageMainGrid" d:IsLocked="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Height="50" VerticalAlignment="Center" Margin="15" d:IsLocked="True" >
                <Label Name="ActiveDocTitle" TextElement.FontSize="13" VerticalAlignment="Center" d:IsLocked="True" >
                    <Label.BitmapEffect>
                        <DropShadowBitmapEffect/>
                    </Label.BitmapEffect>
                </Label>
            </Grid>
            <ScrollViewer Grid.Row="1" d:IsLocked="True">
                <StackPanel Background="WhiteSmoke" CanVerticallyScroll="True" CanHorizontallyScroll="True" d:IsLocked="True" >
                    <TextBlock Text=" TARGET PROJECT" Style="{StaticResource Header}" FontSize="13" d:IsLocked="True"/>
                    <StackPanel Height="50" Width="300" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" d:IsLocked="True" >
                        <ComboBox Name="ComboDocs" Height="25" Width="170"  DisplayMemberPath="Title" Margin="10" d:IsLocked="True"/>
                        <Button Name="ShowSettingsCmd" Content="Settings" Height="25" Width="90" Margin="10" 
                                VerticalAlignment="Center" HorizontalAlignment="Right" Click="ShowSettingsCmd_Click" d:IsLocked="True"/>
                    </StackPanel>
                    <TextBlock Text=" ELEMENT DATA" Style="{StaticResource Header}" FontSize="13" d:IsLocked="True"/>
                    <StackPanel Height="50" Width="300" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" d:IsLocked="True" >
                        <ComboBox Name="ComboDataFilter" Height="25" Width="280" Margin="10"
                                  IsEnabled ="{Binding Path=IsEnabled, Mode=OneWay, UpdateSourceTrigger=Explicit}"
                                  SelectedValue="{Binding Path=FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding Path=UniqueElementNames, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" d:IsLocked="True" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            <ScrollViewer Grid.Row="2" d:IsLocked="True">
                <DataGrid Name="dataGridView" Width="Auto" MinWidth="500" MaxWidth="1000" IsSynchronizedWithCurrentItem="True"
                          ItemsSource="{Binding Path=ViewCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:IsLocked="True" >
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <EventSetter Event="MouseDoubleClick" Handler="DataGrid_MouseDoubleClick"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Switch" CellStyle="{StaticResource SingleClickEditStyle}" d:IsLocked="True">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <CheckBox Name="CheckSelectAll" Content="Select" Checked="CheckSelectAll_CheckChanged" Unchecked="CheckSelectAll_CheckChanged"
                                              IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Path=IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Checked ="CheckBox_Checked"  Unchecked="CheckBox_Unchecked"
                                              IsThreeState="False" HorizontalAlignment="Center" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Width="150" Header="Symbol Name" Binding="{Binding SymbolName}" d:IsLocked="True">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsReadOnly" Value="true"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="150" Header="Family Name" Binding="{Binding FamilyName}" d:IsLocked="True">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsReadOnly" Value="true"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="100" Header="Category" Binding="{Binding CategoryName}" d:IsLocked="True">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsReadOnly" Value="true"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="100" Header="Description" Binding="{Binding Description}" d:IsLocked="True">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsReadOnly" Value="true"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
            <StackPanel  Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" d:IsLocked="True">
                <!--<Button Name="Test" Content="Test" Height="25" Width="90" Margin="5" 
                        Command="{Binding }" d:IsLocked="True" />-->
                <Button Name="SnoopCmd" Content="Snoop" Height="25" Width="90" Margin="5" 
                        Command="{Binding SnoopCommand, Mode=OneTime}" d:IsLocked="True"/>
                <Button Name="ApplyCmd" Content="Apply"  Height="25" Width="90" Margin="5"
                        IsEnabled="{Binding Path=IsCollectionEnabled, Mode=OneWay, UpdateSourceTrigger=Explicit}"
                        Command="{Binding Path=ShowExecuteCommand, Mode=OneTime, UpdateSourceTrigger=Explicit}"
                        CommandParameter="{Binding IsEnabled, ElementName=ApplyCmd}" d:IsLocked="True"/>
                <Button Name="CancelCmd" Content="Close"  Height="25" Width="90" Margin="5"
                        Command="{Binding CancelCommand, Mode=OneTime, UpdateSourceTrigger=Explicit}" d:IsLocked="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>