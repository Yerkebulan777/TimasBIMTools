<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="viewPage" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    d:DataContext="{d:DesignInstance Type=vm:CutVoidDataViewModel}"
    xmlns:vm="clr-namespace:RevitTimasBIMTools.ViewModels"
    xmlns:local="clr-namespace:RevitTimasBIMTools.Views"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    x:Class="RevitTimasBIMTools.Views.CutVoidDockPaneView" 
    d:Height="Auto" d:Width="300" mc:Ignorable="d"
    Background="WhiteSmoke">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/RevitTimasBIMTools;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    
    <!-- GridMain -->
    <Border BorderThickness="2.5" BorderBrush="Gray">
        <Grid Name="PageMainGrid" >
 
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            
            <!--Header -->
            <Border  Grid.Row="0" Background="{DynamicResource FloralGradientBrush}" >
                <Grid Grid.Row="0" VerticalAlignment="Center" >
                    <Label Name="ActiveDocTitle" TextElement.FontSize="13" VerticalAlignment="Center"
                           Content="{Binding Path=SelectedDocModel, Mode=OneWay, UpdateSourceTrigger=Explicit}">
                        <Label.BitmapEffect>
                            <DropShadowBitmapEffect/>
                        </Label.BitmapEffect>
                    </Label>
                    <ToggleButton Name="settingsBtn" Height="40" Width="60"
                                  HorizontalAlignment="Right" VerticalAlignment="Center"
                                  Background="Transparent" BorderBrush="Transparent"
                                  IsChecked="{Binding Path=IsOptionEnabled, Mode=TwoWay}"
                                  Command="{Binding Path=SettingsCommand, Mode=OneTime}"
                                  CommandParameter="{Binding Path=IsStarted}">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                <Setter Property="Content" Value="&#xE713;"/>
                                <Setter Property="FontSize" Value="21"/>
                                <Style.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                        <Setter Property="Content" Value="&#xE700;"/>
                                        <Setter Property="FontSize" Value="21"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </Grid>
            </Border>


            <!-- Options -->
            <ListView Name="sidePanel" Grid.Row="1" VerticalAlignment="Top"  HorizontalContentAlignment="Stretch" 
                      Visibility="{Binding  Path=IsOptionEnabled, Converter={StaticResource BoolToViz}, FallbackValue=Collapsed}"
                      Style="{StaticResource VisibleAnimation}" >

                <ListViewItem>
                    <Border Style="{StaticResource GroupBoxBorderStyle}" >
                        <StackPanel>

                            <WrapPanel  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2.5" >
                                <Label Content="Project title: " Width="125"/>
                                <ComboBox Name="ComboDocumentModels" Height="23" Width="125" 
                                          ItemsSource="{Binding Path=DocumentCollection}" 
                                          SelectedItem="{Binding Path=SelectedDocument}"/>
                                <!--Watermark="Select project..."-->
                            </WrapPanel>

                            <WrapPanel  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2.5" >
                                <Label Content="Structure material: " Width="125"/>
                                <ComboBox Name="ComboStructureMats" Height="23" Width="125" DisplayMemberPath="Value.Name" 
                                          ItemsSource="{Binding Path=StructureMaterials, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                                          SelectedValuePath="Value" SelectedValue="{Binding Path=SelectedMaterial}" />
                                <!--Watermark="Select material..."-->
                            </WrapPanel>

                            <WrapPanel  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2.5" >
                                <Label Content="MEP system category: " Width="125"/>
                                <ComboBox Name="ComboEngineerCats" Height="23" Width="125" DisplayMemberPath="Value.Name" 
                                          ItemsSource="{Binding Path=EngineerCategories, Mode=OneWay}"
                                          SelectedValuePath="Value" SelectedValue="{Binding Path=SelectedCategory}" />
                                <!--Watermark="Select category..."-->
                            </WrapPanel>

                        </StackPanel>
                    </Border>
                </ListViewItem>

                <ListViewItem>
                    <Border Style="{StaticResource GroupBoxBorderStyle}" >
                        <StackPanel>
                            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2.5" >
                                <Label Content="Wall opening:" Width="125" />
                                <ComboBox Name="ComboWallOpenning" Height="23" Width="125" DisplayMemberPath="Value.Name" 
                                          ItemsSource="{Binding Path=FamilySymbols, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                                          SelectedValuePath="Value" SelectedValue="{Binding Path=WallOpenning}" />
                                <!--Watermark="Select family..."-->
                            </WrapPanel>
                            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2.5" >
                                <Label Content="Floor opening: " Width="125" />
                                <ComboBox Name="ComboFloorOpenning" Height="23" Width="125" DisplayMemberPath="Value.Name" 
                                          ItemsSource="{Binding Path=FamilySymbols, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                                          SelectedValuePath="Value" SelectedValue="{Binding Path=FloorOpenning}" />
                                <!--Watermark="Select family..."-->
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </ListViewItem>

                <ListViewItem>
                    <Border Style="{StaticResource GroupBoxBorderStyle}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2.5" >
                                <Label Content="Minimum size: " Width="125"/>
                                <Slider Name="MinSideSize" Minimum="0" Maximum="100" Height="23" Width="125" 
                                        Value="{Binding Path=MinSideSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox Text="{Binding ElementName=MinSideSize, Path=Value}" Height="23" Width="50"/>
                            </WrapPanel>

                            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2.5" >
                                <Label Content="Maximum size: " Width="125"/>
                                <Slider Name="MaxSideSize" Minimum="100" Maximum="1000" Height="23" Width="125" 
                                        Value="{Binding Path=MaxSideSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox Text="{Binding ElementName=MaxSideSize, Path=Value}" Height="23" Width="50"/>
                            </WrapPanel>

                        </StackPanel>
                    </Border>
                </ListViewItem>

                <ListViewItem>
                    <Border Style="{StaticResource GroupBoxBorderStyle}" >
                        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2.5" >
                            <Label Content="Cut offset: " Width="125"/>
                            <Slider Name="CutOffset" Minimum="0" Maximum="100" Height="23" Width="125" 
                                    Value="{Binding Path=CutOffsetSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding ElementName=CutOffset, Path=Value}" Height="23" Width="50" />
                        </WrapPanel>
                    </Border>
                </ListViewItem>


            </ListView>


            <!-- Filter Control -->
            <WrapPanel Grid.Row="2" Style="{StaticResource VisibleAnimation}" 
                       Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Right"  Margin="5" 
                       Visibility="{Binding  Path=IsDataRefresh, Converter={StaticResource BoolToViz}, FallbackValue=Collapsed}" >

                <ComboBox Name="ComboLevelFilter" Height="23" Width="125" Margin="5" 
                          ItemsSource="{Binding Path=ValidLevels, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                          SelectedValue="{Binding Path=SelectedLevel, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" 
                          DisplayMemberPath="Value.Name" SelectedValuePath="Value"/>
                <!--Watermark="Select level..."-->

                <ComboBox Name="ComboDataFilter" Height="23" Width="125" Margin="5" 
                          ItemsSource="{Binding Path=UniqueItemNames, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                          SelectedValue="{Binding Path=FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <!--Watermark="Filter by..."-->

                <CheckBox Name="Settings" Content="Show settings" Height="23"  Width="100" Margin="10,5" 
                          VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                          IsChecked="{Binding Path=IsOptionEnabled, Mode=TwoWay, Delay=5}" />

            </WrapPanel>


            <!-- DataGridView -->
            <ScrollViewer Grid.Row="3" >
                <DataGrid Name="dataGridView" IsSynchronizedWithCurrentItem="True" Style="{StaticResource VisibleAnimation}"
                          Visibility="{Binding  Path=IsDataRefresh, Converter={StaticResource BoolToViz}, FallbackValue=Collapsed}" 
                          ItemsSource="{Binding Path=DataViewCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          AutoGenerateColumns="False">
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <EventSetter Event="MouseDoubleClick" Handler="DataGrid_MouseDoubleClick"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Switch" Width="30" CellStyle="{StaticResource SingleClickEditStyle}" >
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <CheckBox Name="CheckSelectAll" IsChecked="{Binding DataContext.IsAllSelectChecked, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                              CommandParameter="{Binding Path=IsFocused, RelativeSource={RelativeSource Self}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Width="150" Header="Symbol Name" Binding="{Binding SymbolName, Mode=OneWay}">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsReadOnly" Value="true"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Width="150" Header="Family Name" Binding="{Binding FamilyName, Mode=OneWay}">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsReadOnly" Value="true"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Width="100" Header="Description" Binding="{Binding Description, Mode=OneWay}">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsReadOnly" Value="true"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>


            <!-- ButtonPanel -->
            <Border Grid.Row="4" Background="Silver">
                <DockPanel Grid.Row="3" LastChildFill="True" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5">
                    <Button Name="SnoopCmd" Height="30" Width="75" Margin="5" 
                        Command="{Binding SnoopCommand, Mode=OneTime}">
                        <Label FontFamily="Segoe MDL2 Assets" Content="&#59647;" Foreground="BlueViolet"  FontSize="15" />
                    </Button>
                    <RepeatButton Name="ApplyCmd" Delay="5000" Interval="2500" Height="30" Width="75" Margin="5"
                        Command="{Binding Path=ShowExecuteCommand, Mode=OneTime, UpdateSourceTrigger=Explicit}"
                        CommandParameter="{Binding IsEnabled, ElementName=ApplyCmd}">
                        <Label FontFamily="Segoe MDL2 Assets" Content="&#59643;" Foreground="Green"  FontSize="15" />
                    </RepeatButton>
                    <Button Name="CancelCmd"  Height="30" Width="75" Margin="5" 
                        Command="{Binding Path=CloseCommand, Mode=OneTime, UpdateSourceTrigger=Explicit}">
                        <Label FontFamily="Segoe MDL2 Assets" Content="&#59153;" Foreground="Red" FontSize="15" />
                    </Button>
                </DockPanel>
            </Border>

        </Grid>
    </Border>
</Page>