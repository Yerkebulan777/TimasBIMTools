<Window x:Class="RevitTimasBIMTools.Views.CutOpeningWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitTimasBIMTools.Views"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="CutOpeningWindows" Height="500" Width="900" 
        ResizeMode="CanResizeWithGrip" Topmost="True" WindowStyle="None" AllowsTransparency="True" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Popup Name="RevitView" AllowsTransparency="True" Placement="Center" 
               HorizontalOffset="10" VerticalOffset="10" Grid.ColumnSpan="2" Margin="0,0,802,0">
            <Grid>
                <local:CutOpeningView x:Name="Header" Foreground="#E0FFFF"/>
            </Grid>
        </Popup>
    </Grid>
</Window>
