<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Gradient and Color  -->
    <SolidColorBrush x:Key="ColorBrushPrimary" Color="OliveDrab" />

    <GradientStopCollection x:Key="GlassGradientStopsResource">
        <GradientStop Offset="0.1" Color="WhiteSmoke" />
        <GradientStop Offset="0.35" Color="Transparent" />
        <GradientStop Offset="0.5" Color="WhiteSmoke" />
        <GradientStop Offset="0.75" Color="Transparent" />
        <GradientStop Offset="0.9" Color="WhiteSmoke" />
        <GradientStop Offset="1" Color="Transparent" />
    </GradientStopCollection>
    <LinearGradientBrush x:Key="GrayBlueGradientBrush">
        <GradientStop Offset="0" Color="DarkGray" />
        <GradientStop Offset="0.5" Color="#FFE0E0FF" />
        <GradientStop Offset="1" Color="DarkGray" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FloralGradientBrush" Opacity="0.5">
        <GradientStop Offset="0" Color="LimeGreen" />
        <GradientStop Offset="1" Color="DeepSkyBlue" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ModernGradientBrush" Opacity="0.5">
        <GradientStop Offset="0.0" Color="DeepSkyBlue" />
        <GradientStop Offset="1" Color="HotPink" />
    </LinearGradientBrush>

</ResourceDictionary>